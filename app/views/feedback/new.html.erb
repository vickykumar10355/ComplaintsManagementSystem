<div class="col-md-6 col-md-offset-3">
	 <div class="row">
		 <div class="panel panel-default">
			  <div class="panel-heading">
					<h2>Feedback</h2>
			   </div>
			   <div class="panel-body">

                  <%= form_for @feedback do |f| %>
					<% if @feedback.errors.any? %>
						<div id="errors">
							<h4>
							<%= pluralize(@feedback.errors.count, "error") %>
								prevented this feedback from saving
							</h4>
					  		<ul>
							<% @feedback.errors.full_messages.each do |msg| %>
						 		 <li>
									<%= msg %>
						  		</li>
							<% end %>
						</ul>
						</div>
					<% end %>
				<div class="form-inputs">
				
				<div class="form-group">
				<label>Your Name</label>
                    <%= f.text_field :name, required: true, autofocus: true,:placeholder=>"Your Name", :class=>"form-control" %>
				</div>

				<div class="form-group">
				<label>Rating (1=Lowest 5=Highest)</label>
                    <%= f.select :rating, options_for_select(["---Select---","1","2","3","4","5"]),{}, :class => 'form-control' %>
				</div>
				<div class="form-group">
				<label>Comment</label>
                    <%= f.text_area :comment, required: true, autofocus: true,:placeholder=>"Comment", :class=>"form-control" %>
				</div>
				
			  
				 <div class="form-actions">
						<%= f.submit "Submit", class: "btn btn-primary center-block"  %>
				 </div>
			</div>
			  
			<% end %>


			</div>
		</div>
	</div>
</div>
